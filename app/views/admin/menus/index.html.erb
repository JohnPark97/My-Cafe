<h1>Menus</h1>
<%= link_to 'New Menu', new_admin_menu_path %>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Description</th>
    <th>Price</th>
    <th>Availability</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @menus.each do |menu| %>
    <tr>
      <td><%= menu.name %></td>
<!--      asdf link to the corresponding category-->
      <td><%= link_to menu.category.name, admin_category_path(menu.category) %></td>
      <td><%= menu.description %></td>
      <td><%= number_to_currency(menu.price) %></td>
      <td><%= menu.availability ? 'Available' : 'Not Available' %></td>
      <td><%= link_to 'Show', admin_menu_path(menu) %></td>
      <td><%= link_to 'Edit', edit_admin_menu_path(menu) %></td>
      <td><%= link_to 'Destroy', admin_menu_path(menu), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Back to Dashboard', admin_dashboard_path %>
